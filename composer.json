{
    "name": "netresearch/nr-llm",
    "description": "TYPO3 extension providing unified AI/LLM provider abstraction layer for TYPO3 projects - by Netresearch",
    "license": "GPL-2.0-or-later",
    "type": "typo3-cms-extension",
    "keywords": [
        "TYPO3",
        "extension",
        "LLM",
        "AI",
        "OpenAI",
        "Claude",
        "Gemini"
    ],
    "authors": [
        {
            "name": "Netresearch DTT GmbH",
            "email": "typo3@netresearch.de",
            "homepage": "https://www.netresearch.de/",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/netresearch/t3x-nr-llm",
    "support": {
        "issues": "https://github.com/netresearch/t3x-nr-llm/issues",
        "source": "https://github.com/netresearch/t3x-nr-llm"
    },
    "require": {
        "php": "^8.5",
        "netresearch/nr-vault": "^0.3.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^2.0 || ^3.0",
        "typo3/cms-core": "^14.0"
    },
    "require-dev": {
        "a9f/typo3-fractor": "^0.5.8",
        "enlightn/security-checker": "^2.0",
        "ergebnis/composer-normalize": "^2.0",
        "fakerphp/faker": "^1.24",
        "friendsofphp/php-cs-fixer": "^3.0",
        "giorgiosironi/eris": "^1.0",
        "infection/infection": "^0.32",
        "phpat/phpat": "^0.12",
        "phpro/grumphp": "^2.0",
        "phpstan/phpstan": "^2.1.37",
        "phpunit/phpunit": "^12.0",
        "rector/rector": "^2.3.1",
        "ssch/typo3-rector": "^3.0",
        "typo3/testing-framework": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Netresearch\\NrLlm\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netresearch\\NrLlm\\Tests\\": "Tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "a9f/fractor-extension-installer": true,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "phpro/grumphp": true,
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        },
        "bin-dir": ".Build/bin",
        "sort-packages": true,
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "nr_llm",
            "web-dir": ".Build/Web"
        }
    },
    "scripts": {
        "ci": [
            "@lint",
            "@phpstan",
            "@test:unit",
            "@test:integration",
            "@test:fuzzy"
        ],
        "ci:full": [
            "@ci",
            "@test:functional"
        ],
        "ddev:ci:full": "ddev exec 'cd /var/www/html/v14/vendor/netresearch/nr-llm && composer ci:full'",
        "ddev:test": "ddev exec 'cd /var/www/html/v14/vendor/netresearch/nr-llm && composer test'",
        "ddev:test:functional": "ddev exec 'cd /var/www/html/v14/vendor/netresearch/nr-llm && composer test:functional'",
        "fractor": "fractor process --config Build/fractor/fractor.php",
        "fractor:dry": "fractor process --config Build/fractor/fractor.php --dry-run",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse -c Build/phpstan/phpstan.neon",
        "phpstan:baseline": "phpstan analyse -c Build/phpstan/phpstan.neon --generate-baseline Build/phpstan/phpstan-baseline.neon",
        "rector": "rector process --config Build/rector/rector.php",
        "rector:dry": "rector process --config Build/rector/rector.php --dry-run",
        "test": "phpunit -c Build/UnitTests.xml",
        "test:e2e": "npm run test:e2e",
        "test:functional": "phpunit -c Build/FunctionalTests.xml",
        "test:fuzzy": "phpunit -c Build/UnitTests.xml --testsuite fuzzy",
        "test:integration": "phpunit -c Build/UnitTests.xml --testsuite integration",
        "test:mutation": "infection --configuration=infection.json.dist --threads=4 -s --no-progress",
        "test:mutation:ci": "infection --configuration=infection.json.dist --threads=4 --logger-github --no-progress",
        "test:unit": "phpunit -c Build/UnitTests.xml --testsuite unit"
    }
}
